<h1> Admin Categories Menu </h1>
<%= link_to "Add New Category", new_admin_category_path %>

<% @categories.each do |category| %>
<h2><%= link_to category.title, admin_category_path(category) %></h2>
<h4><%= category.description %></h4><br>
<%= link_to "Edit", edit_admin_category_path(category) %>
<%= link_to "Delete", admin_category_path(category), method: :delete %>
<% end %>
